doctype html
html(lang='en')
  include includes/head

  body
    include includes/header

    div(class='container')
      div(class='jumbotron')
        h2 Client Information:
        each client in clients
          ul
            li #[b client_id:] #[code #{client.client_id}]
            li #[b client_secret:] #[code #{client.client_secret}]
            li #[b scope:] #[code #{client.scope}]
            li #[b redirect_uri:] #[code #{client.redirect_uris}]
        h2 Server Information:
        ul
          li #[b authorization_endpoint:] #[code #{authServerConfig.authorizationEndPoint}]
          li #[b token_endpoint:] #[code #{authServerConfig.tokenEndPoint}]

    include includes/footer
